{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "skipLibCheck": true,

    "isolatedModules": true,

    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "strict": true
  }
}
